{
  "name": "@zhyd1997/use-form-hooks",
  "author": "Yadong Zhang",
  "version": "0.1.1",
  "description": "useForm hooks written with Typescript.",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhyd1997/useForm.git"
  },
  "bugs": {
    "url": "https://github.com/zhyd1997/useForm/issues"
  },
  "homepage": "https://github.com/zhyd1997/useForm#readme",
  "keywords": [
    "react",
    "react-hooks",
    "forms",
    "form-validation"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "postbuild": "rm -rf dist/setupTests.* dist/hooks/useForm/useForm.test.*",
    "build": "babel --extensions \".ts,.tsx\" src -d dist --ignore '**/*.test.ts' && tsc",
    "build:examples": "yarn build && yarn --cwd ./examples start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --runInBand",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/dom": "^8.7.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.27",
    "@types/regenerator-runtime": "^0.13.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-jest": "^27.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.1",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.2.0",
    "prettier": "2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "regenerator-runtime": "^0.13.9",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "eslint src --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
