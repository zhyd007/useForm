{
  "name": "@zhyd1997/use-form-hooks",
  "author": "Yadong Zhang",
  "version": "0.2.1",
  "description": "useForm hooks written with Typescript.",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhyd1997/useForm.git"
  },
  "bugs": {
    "url": "https://github.com/zhyd1997/useForm/issues"
  },
  "homepage": "https://github.com/zhyd1997/useForm#readme",
  "keywords": [
    "react",
    "react-hooks",
    "forms",
    "form-validation"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "postbuild": "rm -rf dist/setupTests.* dist/hooks/useForm/useForm.test.*",
    "build": "babel --extensions \".ts,.tsx\" src -d dist --ignore '**/*.test.ts' && tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --runInBand",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/css": "^11.5.0",
    "@emotion/react": "^11.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@babel/preset-env": "7.16.4",
    "@babel/preset-react": "7.16.0",
    "@babel/preset-typescript": "7.16.0",
    "@testing-library/dom": "8.11.1",
    "@testing-library/jest-dom": "5.16.0",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.0.3",
    "@types/react": "17.0.37",
    "@types/regenerator-runtime": "0.13.1",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "babel-jest": "27.4.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.3.0",
    "eslint-plugin-react": "7.27.1",
    "husky": "7.0.4",
    "jest": "27.4.3",
    "lint-staged": "12.1.2",
    "prettier": "2.5.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "regenerator-runtime": "0.13.9",
    "typescript": "4.5.2"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "eslint src --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
