{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "declaration": true,
    "outDir": "dist",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
